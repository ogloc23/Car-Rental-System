{
  "compilerOptions": {
    "lib": ["ESNext"],
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    "target": "ESNext",                    
    "module": "ESNext",                    
    "moduleResolution": "node",            
    "esModuleInterop": true,               
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                        
    "allowJs": true,                       
    "types": ["node", "express"],          
    "resolveJsonModule": true              
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
