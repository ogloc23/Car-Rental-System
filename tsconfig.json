{
  "compilerOptions": {
    "lib": ["ESNext"],
    "rootDir": ".",                
    "outDir": "./dist",            
    "target": "ESNext",            
    "module": "ESNext",           // Change to "ESNext" for better compatibility with ES modules
    "moduleResolution": "node",    
    "esModuleInterop": true,       
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true,
    "strict": true,                
    "allowJs": true,               
    "types": ["node"],  
    "resolveJsonModule": true,      
    "noImplicitAny": false,         
    "emitDecoratorMetadata": true,  
    "experimentalDecorators": true  
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "prisma/**/*.ts",             // You may not need this, unless you have TypeScript files in prisma/
    "src/types/**/*.d.ts",
    "node_modules/@types/express/index.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
